<header>
  <h1>Order and devour your burger!</h1>
</header><!-- /header -->



<div class="wrapper">
  <div class="row">
    <div class="col s3">

    </div>


    <div class="col s6">

      <div id="create-burger">
        <form action="/" method="POST">
          <input id="burger-name" type="text" name="burger_name" placeholder="Create a burger">
          <button id="submit-btn" type="submit"> Order</button>
        </form>
      </div>
    </div>



    <div class="col s3">
    </div>
  </div>




  <section id="burgers-container">
    <div class="row">
      <div class="col s2">
      </div>

      <div class="col s6">
        <div id="burgers-available">
          <h2>Burgers Available</h2>
          {{#each burgers}}
          {{#unless this.devoured}}
          <div class="burger">
            <form class="devour-burger-form" action="/{{id}}?_method=PUT" method="POST">
              <button class="eat-btn">EAT</button>
            </form>
            {{burger_name}} <span>#{{id}}</span>
          </div>
          {{/unless}}
          {{/each}}
        </div>
      </div>
      <div class="col s5">
        <div id="burgers-devoured">
          <h2>Eaten Burgers</h2>
          {{#each burgers}}
          {{#if this.devoured}}
          <div class="burger">{{burger_name}} <span>#{{id}}</span></div>
          {{/if}}
          {{/each}}
        </div>
      </div>
      <div class="col s2">
      </div>
    </div>
  </section>
</div>